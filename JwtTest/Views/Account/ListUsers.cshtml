@model IEnumerable<JwtTest.EF.Person>
@{
    ViewData["Title"] = "Список пользователей";
}
<p>
    <a asp-action="CreateUser">Создать нового пользователя</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Avatar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Login)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="/Account/Avatar?username=@item.Login" alt="Аватар" height="20" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Login)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    <a asp-action="EditUser" asp-route-id="@item.Id">Редактировать</a> |
                    <a asp-action="UserDetails" asp-route-id="@item.Id">Информация</a> |
                    <a asp-action="DeleteUser" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>
