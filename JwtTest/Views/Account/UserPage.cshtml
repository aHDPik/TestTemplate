@model JwtTest.Models.UserModel
@{
    ViewData["Title"] = $"Страница пользователя {Model.Username}";
}
<div>
    <h4>UserModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Username)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Username)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Role)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Role)
        </dd>
        <dt class="col-sm-2">
            Аватар
        </dt>
        <dd class="col-sm-10">
            <img src="/Account/Avatar?username=@Model.Username" alt="Аватар" height="200" />
        </dd>
        @foreach (AddressModel address in Model.Addres)
        {
            <dt class="col-sm-2">
                Адрес
            </dt>
            <dd class="col-sm-10">
                @address.Addr
            </dd>
            <dt class="col-sm-2">
                Описание
            </dt>
            <dd class="col-sm-10">
                @address.Description
            </dd>
            <dt class="col-sm-2">
                Стоимость аренды в сутки
            </dt>
            <dd class="col-sm-10">
                @address.Cost
            </dd>
            <dt class="col-sm-2">
                Количество комнат
            </dt>
            <dd class="col-sm-10">
                @address.Rooms
            </dd>
            <dt class="col-sm-2">
                <a href="/Account/DeleteAddress?IdAddr=@address.Id">Удалить апартаменты</a>
            </dt>
            <dd class="col-sm-10">

            </dd>
        }
    </dl>
    <a href="/Account/RegisterAddress">Зарегистрировать апартаменты</a>
</div>
